pipeline {
    environment {
        docker_image = ''
    }
    agent any
    options { 
        timestamps()
        timeout(time: 1, unit: 'HOURS') 
    }
    stages {
        stage('Build & Run Docker Image') {
            steps {
                script{
                    docker_image = docker.build("test-jenkins:0.1", ".")
                    docker.image('test-jenkins:0.1').withRun(){ c ->
                        sh "docker logs --follow ${c.id}"
                    }
                }
            }
        }
    }
}