pipeline {
    environment {
        docker_image = ''
    }
    agent any
    options { 
        timestamps()
        timeout(time: 1, unit: 'HOURS') 
    }
    stages {
        stage('Build Docker Image') {
            steps {
                script{
                    docker_image = docker.build("test-jenkins:0.1", ".")
                }
            }
        }
        stage('Docker Run'){
            steps {
                script {
                    docker.image("test-jenkins:0.1").withRun(){ c->
                        docker logs --follow {c.id}
                    }
                }
            }
        }
    }
}